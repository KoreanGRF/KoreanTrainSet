/**
 * GTX_A
 */
SPEED_METRO(GTX_A)
COST(GTX_A)
RUNNING(GTX_A)
CAPACITY(GTX_A)
CAPACITY_PURCHASE(GTX_A)
LOADING(GTX_A)

// Graphics
#include "GTX-A_graphic.pnml"

// Switch
#include "GTX-A_switch.pnml"

// Item
item(FEAT_TRAINS, ko_train_GTX_A, 5791) {
    property {
        // Common properties
        name:                           string(STR_GTX_A_NAME);
        climates_available:             ALL_CLIMATES;
        introduction_date:              var_GTX_A_INTRODUCTION;
        track_type:                     ELRL;
        engine_class:                   ENGINE_CLASS_ELECTRIC;
        sprite_id:                      SPRITE_ID_NEW_TRAIN;
        dual_headed:                    1;

        // Spec
        power:                          POWER_IN_KW(var_GTX_A_POWER);
        weight:                         var_GTX_A_WEIGHT;
        tractive_effort_coefficient:    0.25;
        air_drag_coefficient:           0.01;

        // Model
        model_life:                     VEHICLE_NEVER_EXPIRES;
        vehicle_life:                   30;
        retire_early:                   0;
        reliability_decay:              0;

        // Cargo
        cargo_capacity:                 1;
        refittable_cargo_classes:       NO_CARGO_CLASS;
        non_refittable_cargo_classes:   NO_CARGO_CLASS;
        cargo_allow_refit:              [PASS];
        cargo_disallow_refit:           [];

        // Costs
        refit_cost:                     0;
        running_cost_base:              RUNNING_COST_ELECTRIC;

        // Flags
        ai_special_flag:                AI_FLAG_PASSENGER;
        misc_flags:                     bitmask(TRAIN_FLAG_MU, TRAIN_FLAG_AUTOREFIT, TRAIN_FLAG_FLIP);
        bitmask_vehicle_info:           0;
    }
    graphics {
        default:                        sw_GTX_A_engine;
        purchase:                       sw_GTX_A_purchase;

        speed:                          sw_GTX_A_speed;
        cost_factor:                    sw_GTX_A_cost;
        running_cost_factor:            sw_GTX_A_runningcost;
        cargo_capacity:                 sw_GTX_A_capacity;
        purchase_cargo_capacity:        sw_GTX_A_purchase_capacity;
        loading_speed:                  sw_GTX_A_loadingspeed;

        can_attach_wagon:               sw_METRO_attach_global;
        start_stop:                     sw_ko_train_start_stop_global;
        // cargo_subtype_text:             sw_GTX_A_cargo_subtype_text;
        additional_text:                string(STR_REFIT_ADDITIONAL_ABLE);
    }
    livery_override(ko_train_PASSWG) {
        default:                        sw_GTX_A_wagon;
        cargo_capacity:                 sw_METRO_wagon_capacity;
        running_cost_factor:            sw_PASSENGER_WAGON_runningcost;
        loading_speed:                  sw_GTX_A_loadingspeed;
        // cargo_subtype_text:             sw_GTX_A_cargo_subtype_text;
    }
    livery_override(ko_train_PASSWGP) {
        default:                        sw_GTX_A_wagon;
        cargo_capacity:                 sw_METRO_wagon_capacity;
        running_cost_factor:            sw_PASSENGER_WAGON_P_runningcost;
        loading_speed:                  sw_GTX_A_loadingspeed;
        // cargo_subtype_text:             sw_GTX_A_cargo_subtype_text;
        power:                          POWER_IN_KW(var_METRO_wagon_POWER);
    }
}
// End of "GTX_A"
