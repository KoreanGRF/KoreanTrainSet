        // Common properties
        name:                           string(STR_DAEGU_METROPOLITAN_NAME);
        climates_available:             ALL_CLIMATES;
        introduction_date:              var_DAEGU_METROPOLITAN_INTRODUCTION;
        track_type:                     ELRL;
        engine_class:                   ENGINE_CLASS_ELECTRIC;
        sprite_id:                      SPRITE_ID_NEW_TRAIN;
        dual_headed:                    1;
        variant_group:                  ko_train_METROPOLITAN;

        // Spec
        power:                          POWER_IN_KW(var_DAEGU_METROPOLITAN_POWER);
        weight:                         var_DAEGU_METROPOLITAN_WEIGHT;
