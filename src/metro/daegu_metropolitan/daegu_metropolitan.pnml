        cargo_capacity:                 sw_DAEGU_METROPOLITAN_capacity;
        purchase_cargo_capacity:        sw_DAEGU_METROPOLITAN_purchase_capacity;
        loading_speed:                  sw_DAEGU_METROPOLITAN_loadingspeed;

        can_attach_wagon:               sw_METRO_attach_global;
        additional_text:                string(STR_REFIT_ADDITIONAL_UNABLE);
