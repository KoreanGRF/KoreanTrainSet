// Green & Yellow
spriteset(set_K2x00_GREEN_YELLOW_purchase, "./src/locomotive/K2x00/K2x00.png") {
    tmpl_purchase_common(0, 90)
}
spriteset(set_K2x00_GREEN_YELLOW, "./src/locomotive/K2x00/K2x00.png") {
