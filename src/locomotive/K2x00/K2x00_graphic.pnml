}
spriteset(set_K2x00_BLACK_ORANGE_1, "./src/locomotive/K2x00/K2x00.png") {
    tmpl_K2x00(80, 30)
}

// Black & Orange (wide)
spriteset(set_K2x00_BLACK_ORANGE_2_purchase, "./src/locomotive/K2x00/K2x00.png") {
